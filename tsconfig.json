{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "ES2018",
        "module": "CommonJS",
        "sourceMap": false,
        "declaration": false,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "importHelpers": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "strictNullChecks": true,
        "typeRoots": [
            "./typings",
            "./node_modules/@types"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "typings/**/*.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}